{
  "name": "io-services-cms",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "devcontainer",
  "workspaceFolder": "/workspace",
  "containerEnv": {
    "COMPOSE_PROFILES": "${localEnv:COMPOSE_PROFILES}",
    "ARM_SUBSCRIPTION_ID": "${localEnv:ARM_SUBSCRIPTION_ID}"
  },
  "features": {
    "ghcr.io/devcontainers/features/azure-cli:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {
      "version": "1.14.2",
      "tflint": "latest",
      "installTFsec": true,
      "installTerraformDocs": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20.19.0",
      "installYarnUsingApt": false,
      "pnpmVersion": "none",
      "nvmInstallPath": "/opt/nvm"
    },
    "ghcr.io/devcontainers-extra/features/pre-commit:2": {},
    "ghcr.io/pagopa/devcontainer-features/trivy:1": {},
    "ghcr.io/pagopa/devcontainer-features/plantuml:1": {},
    "ghcr.io/pagopa/devcontainer-features/azure-functions-core-tools:1": {}
  },
  "postStartCommand": {
    "set-workspace-as-safe-dir": "git config --global --add safe.directory ${containerWorkspaceFolder}",
    // Use interactive bash (-i) to load NVM and the correct PATH
    "install-yarn-and-deps": "/bin/bash -i -c 'corepack enable && yarn install'",
    // Do the same for pre-commit for safety
    "install-pre-commit": "/bin/bash -i -c 'pre-commit install --install-hooks'"
  },
  // Use 'forwardPorts' to make a list of ports inside the container available locally.
  "forwardPorts": [
    1234 // Cosmos DB Emulator web interface
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "-ms-dotnettools.csharp",
        "-ms-azuretools.vscode-azureterraform",
        "ms-azuretools.vscode-azure-github-copilot",
        "ms-vscode.vscode-websearchforcopilot",
        "azurite.azurite",
        "ms-azuretools.vscode-azureterraform",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        "-arcanis.vscode-zipfs",
        "esbenp.prettier-vscode",
        "EditorConfig.EditorConfig",
        "-bruno-api-client.bruno",
        "vitest.explorer",
        "redhat.vscode-yaml",
        "dbaeumer.vscode-eslint",
        "github.copilot",
        "github.copilot-chat",
        "ms-vsliveshare.vsliveshare",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "ms-azuretools.vscode-cosmosdb"
      ],
      "settings": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode"
      }
    }
  }
}
