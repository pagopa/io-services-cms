{
  "bindings": [
    {
      "authLevel": "function",
      "type": "cosmosDBTrigger",
      "direction": "in",
      "name": "documents",
      "connectionStringSetting": "COSMOSDB_CONNECTIONSTRING",
      "databaseName": "%COSMOSDB_NAME%",
      "collectionName": "%COSMOSDB_CONTAINER_SERVICE_PUBBLICATIONS%",
      "leaseCollectionName": "%COSMOSDB_CONTAINER_SERVICE_PUBBLICATIONS%-lease",
      "createLeaseCollectionIfNotExists": true,
      "startFromBeginning": true,
      "maxItemsPerInvocation": 30
    },
    {
      "queueName": "%REQUEST_HISTORY_QUEUE%",
      "connection": "INTERNAL_STORAGE_CONNECTION_STRING",
      "name": "requestHistory",
      "type": "queue",
      "direction": "out"
    }
  ],
  "retry": {
    "strategy": "exponentialBackoff",
    "maxRetryCount": 10,
    "minimumInterval": "00:00:05",
    "maximumInterval": "00:01:00"
  },
  "scriptFile": "../dist/main.js",
  "entryPoint": "onServicePublicationChangeEntryPoint"
}