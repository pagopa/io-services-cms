<policies>
    <inbound>
        <base />
        <set-backend-service backend-id="{{backend-id}}" />
        <set-header name="x-functions-key" exists-action="override">
            <value>{{appbe-host-key-for-apim-platform}}</value>
        </set-header>
        <rewrite-uri template="@(context.Request.Url.Path.Replace("/catalog", ""))" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>
