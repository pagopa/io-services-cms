<policies>
    <inbound>
        <base />
        <set-backend-service id="apim-pool-app-backend"
            backend-id="app-backend-pool" />
        <set-header name="x-functions-key" exists-action="override">
            <value>{{appbe-host-key-for-apim-platform}}</value>
        </set-header>
        <rewrite-uri template="@(context.Request.OriginalUrl.Path)" />
    </inbound>
    <backend>
        <base />
    </backend>
    <outbound>
        <base />
    </outbound>
    <on-error>
        <base />
    </on-error>
</policies>