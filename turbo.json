{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "generate": {
      "inputs": [
        "./openapi.yaml",
        "./api/internal.yaml",
        "src/generated/**/*"
      ],
      "outputMode": "errors-only"
    },
    "build": {
      "inputs": [
        "src/**/*.ts"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "generate",
        "^build"
      ]
    },
    "typecheck": {
      "inputs": [
        "src/**/*.ts"
      ],
      "outputs": [],
      "dependsOn": [
        "build"
      ]
    },
    "format": {},
    "lint": {
      "inputs": [
        "src/**/*.ts"
      ],
      "outputs": [],
      "dependsOn": [
        "build"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
      ],
      "outputs": [],
      "outputMode": "errors-only",
      "dependsOn": [
        "build"
      ]
    },
    "test:integrations": {
      "inputs": [
        "__integrations__/**/*"
      ],
      "outputs": [],
      "outputMode": "errors-only",
      "dependsOn": [
        "build"
      ]
    },
    "coverage": {
      "inputs": [
        "src/**/*.spec.ts",
        "src/**/*.test.ts"
      ],
      "outputs": [
        "coverage/*"
      ],
      "outputMode": "errors-only",
      "dependsOn": [
        "build"
      ]
    }
  }
}
