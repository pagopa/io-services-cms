{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "generate": {
      "inputs": [
        "./openapi.yaml"
      ],
      "outputs": [
        "src/generated/**/*"
      ],
      "outputLogs": "full"
    },
    "build": {
      "inputs": [
        "src/**/*.ts"
      ],
      "outputs": [
        "dist/**"
      ],
      "dependsOn": [
        "generate",
        "^build"
      ]
    },
    "typecheck": {
      "inputs": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "dependsOn": [
        "generate",
        "^build"
      ]
    },
    "format": {},
    "lint": {
      "inputs": [
        "src/**/*.ts",
        "eslintrc.*"
      ]
    },
    "test": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "package.json"
      ],
      "outputLogs": "errors-only",
      "dependsOn": [
        "generate",
        "^build"
      ]
    },
    "test:integrations": {
      "inputs": [
        "__integrations__/**/*"
      ],
      "outputLogs": "errors-only",
      "dependsOn": [
        "^build"
      ]
    },
    "coverage": {
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "package.json"
      ],
      "outputs": [
        "coverage/*"
      ],
      "outputLogs": "errors-only",
      "dependsOn": [
        "generate",
        "^build"
      ]
    }
  }
}
