{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "inputs": ["src/**/*.ts"],
      "outputs": ["dist/**"],
      "dependsOn": ["^build", "generate"]
    },
    "generate": {},
    "typecheck": {
      "inputs": ["src/**/*.ts"],
      "outputs": [],
      "dependsOn": ["^build", "generate"]
    },
    "format": {},
    "lint": {
      "inputs": ["src/**/*.ts"],
      "outputs": [],
      "dependsOn": ["^build"]
    },
    "test": {
      "inputs": ["src/**/*.spec.ts", "src/**/*.test.ts"],
      "outputs": [],
      "outputMode": "errors-only",
      "dependsOn": ["^build", "generate"]
    },
    "test:integrations": {
      "inputs": ["__integrations__/**/*"],
      "outputs": [],
      "outputMode": "errors-only",
      "dependsOn": ["^build"]
    }
  }
}
